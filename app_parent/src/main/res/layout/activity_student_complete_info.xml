<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <include layout="@layout/layout_header_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="48px"
            android:text="性别"
            android:textColor="#4A4A4A"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43px"
            tools:text="男"
            android:textColor="#4A4A4A"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="48px"
            android:text="生日"
            android:textColor="#4A4A4A"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43px"
            android:textColor="#4A4A4A"
            android:textSize="15sp"
            tools:text="2013-05-03" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rl_hobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_click"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="48px"
            android:text="兴趣"
            android:textColor="#4A4A4A"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_right" />

        <TextView
            android:id="@+id/tv_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_1"
            android:layout_toStartOf="@+id/img_1"
            android:lines="1"
            tools:text="科学,文学,历史"
            android:textColor="#4A4A4A"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rl_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_click"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="48px"
            android:text="培训"
            android:textColor="#4A4A4A"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_right" />

        <TextView
            android:id="@+id/tv_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_2"
            android:layout_toStartOf="@+id/img_2"
            android:lines="1"
            tools:text="语文,英语,钢琴"
            android:textColor="#4A4A4A"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#D8D8D8" />
</LinearLayout>