<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_score"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/text_orange2"
        android:background="@drawable/shape_rectangle_solid_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <com.bj.hmxxparents.widget.AutoScaleTextView
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_studentname"
        app:minTextSize="8sp"
        android:singleLine="true"
        android:gravity="center"
        android:maxLength="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_white"
        android:background="@drawable/shape_rectangle_blue"/>



</LinearLayout>