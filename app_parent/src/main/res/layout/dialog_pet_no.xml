<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_layout_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="还没有获得这个装扮"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/tv1"
            android:id="@+id/tv_shuoming"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/tv_cancel"
            android:layout_below="@+id/tv_shuoming"
            android:layout_marginTop="20dp"
            android:text="取消"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/shape_layout_corner_bottom"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_clothes2"/>


</RelativeLayout>
