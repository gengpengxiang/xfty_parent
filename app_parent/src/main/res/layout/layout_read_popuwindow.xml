<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_dialog_sign"
    android:background="@mipmap/bg_read_popuwindow"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="阅读打卡记录"
            android:textColor="@color/text_orange2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_record"
            android:layout_alignParentRight="true"
            android:text="@string/sign_record"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

   <LinearLayout
       android:layout_marginTop="10dp"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:text="图书名称："
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <EditText
           android:paddingLeft="5dp"
           android:hint="请填写图书名称"
           android:textSize="14sp"
           android:imeOptions="actionNext"
           android:nextFocusForward="@+id/et_number"
           android:singleLine="true"
           android:id="@+id/et_title"
           android:background="@drawable/shape_login_edt"
           android:layout_width="200dp"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="阅读字数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/et_number"
            android:hint="今天读了多少字"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/et_duration"
            android:singleLine="true"
            android:background="@drawable/shape_login_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="阅读时长："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingLeft="5dp"
            android:hint="今天读了多少分钟"
            android:textSize="14sp"
            android:singleLine="true"
            android:id="@+id/et_duration"
            android:background="@drawable/shape_login_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/bt_confirm"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/shape_layout_corner_green_light"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/bt_cancel"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/shape_layout_corner_green_light"
            android:text="取消"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>