<?xml version="1.0" encoding="utf-8"?>
<com.bj.hmxxparents.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_recycler_item_hobby"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="12px"
        android:paddingTop="12px"
        android:text="读书"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <com.bj.hmxxparents.widget.HobbyNoneView
        android:id="@+id/cbView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_checkbox_pic"
        android:enabled="false" />
</com.bj.hmxxparents.widget.SquareLayout>
