<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_report1"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/ic_report_logo"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_layout_corner"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徽章班级排名"
                android:textColor="@color/text_blue_deep"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_badge_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="@color/text_orange_deep"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的徽章"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_badge_mine"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_purple"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级平均"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_badge_average"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_blue"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级最高"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_badge_max"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_pink"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_layout_corner"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价班级排名"
                android:textColor="@color/text_blue_deep"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_evaluation_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="@color/text_orange_deep"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 我的评价"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_evaluation_mine"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_bronze"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级平均分"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_evaluation_mine_average"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_green"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级最高分"
                android:textColor="@color/text_blue_light"
                android:textSize="15sp" />

            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/bar_evaluation_max"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                app:bga_pb_isCapRounded="true"
                app:bga_pb_isHiddenPercent="true"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="horizontal"
                app:bga_pb_reachedColor="@color/color_bar_yellow"
                app:bga_pb_reachedHeight="15dp"
                app:bga_pb_textColor="@color/text_blue_light2"
                app:bga_pb_textMargin="15dp"
                app:bga_pb_textSize="14sp"
                app:bga_pb_unReachedColor="#00000000"
                app:bga_pb_unReachedHeight="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>