        android:text="坐姿端正"
        android:textColor="@color/text_white"
        android:maxLength="5"
        android:background="@drawable/shape_tv_corner_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>