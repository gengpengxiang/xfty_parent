<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/header_ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minWidth="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_me"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_navigationbar_me"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_user"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_user"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_title_sub"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/header_ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/header_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_title"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_ll_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minWidth="45dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_img_search"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_search"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_delete"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_fullScreen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_full_screen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_qrcode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_navigationbar_scan"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_question"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_navigationbar_question"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_share"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header_img_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_header_setting"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_title_sub"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="分享"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:visibility="visible" />


    </LinearLayout>
</RelativeLayout>
