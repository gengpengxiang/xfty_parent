<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（黑色） -->


    <item android:id="@android:id/background">

        <shape>

            <stroke
                android:width="2dp"
                android:color="@color/color_honey_bar_stroke" />

            <corners android:radius="10dp"></corners>
            <solid android:color="@color/color_honey_bar"></solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（白色） -->


    <item android:id="@android:id/progress">

        <clip>
            <shape>

                <stroke
                    android:width="2dp"
                    android:color="@color/color_honey_bar_stroke" />

                <gradient
                    android:angle="45"
                    android:endColor="@color/color_honey"
                    android:startColor="@color/color_honey"></gradient>
                <corners android:radius="10dp"></corners>

            </shape>

        </clip>

    </item>

</layer-list>

